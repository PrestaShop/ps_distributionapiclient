{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
    <div class="row justify-content-center">
        <div class="col-lg-8">
            {{ form_start(configurationForm, {attr: {class: 'form', id: 'configuration_form'}}) }}
            <div class="card">
                <h3 class="card-header">
                    <i class="material-icons">settings</i>
                    {{ 'Wall of Fame configuration'|trans({}, 'Modules.Distributionapiclient.Admin') }}
                </h3>
                <div class="card-body">
                    <div class="form-wrapper">
                        <div class="alert alert-info">
                            {{ 'The Wall of Fame showcases the developers and companies actively contributing to PrestaShop. Discover who builds and improves the software powering your store, helping you identify trusted experts and agencies familiar with the platform. If you prefer not to see this tab, you can disable it below.'|trans({}, 'Modules.Distributionapiclient.Admin') }}
                        </div>
                        {{ form_widget(configurationForm) }}
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary">
                            {{ 'Save'|trans({}, 'Admin.Actions') }}
                        </button>
                    </div>
                </div>
            </div>
            {{ form_end(configurationForm) }}
        </div>
    </div>
{% endblock %}
